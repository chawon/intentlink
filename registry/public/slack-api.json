{
  "id": "slack-api",
  "protocol_version": "0.2.0",
  "identity": {
    "name": "Slack API",
    "purpose": "팀 커뮤니케이션 및 워크플로우 자동화를 위한 메시징 플랫폼입니다."
  },
  "offers": [
    {
      "intent": "communication.message.send",
      "description": "채널이나 사용자에게 메시지를 전송합니다.",
      "endpoint": "https://slack.com/api/chat.postMessage",
      "method": "POST",
      "side_effect": "state-change",
      "auth_type": "bearer",
      "confidence_score": 0.98
    },
    {
      "intent": "communication.channel.list",
      "description": "공개 채널 목록을 조회합니다.",
      "endpoint": "https://slack.com/api/conversations.list",
      "method": "GET",
      "side_effect": "read-only",
      "auth_type": "bearer",
      "confidence_score": 0.95
    },
    {
      "intent": "communication.file.upload",
      "description": "Slack에 파일을 업로드하고 공유합니다.",
      "endpoint": "https://slack.com/api/files.upload",
      "method": "POST",
      "side_effect": "state-change",
      "auth_type": "bearer",
      "confidence_score": 0.9
    }
  ],
  "needs": [
    { "intent": "identity.bot_scope", "criticality": "required" }
  ]
}
