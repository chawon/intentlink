{
  "id": "notion-api",
  "protocol_version": "0.2.0",
  "identity": {
    "name": "Notion API",
    "purpose": "노트, 문서, 위키, 프로젝트 관리를 위한 올인원 워크스페이스입니다."
  },
  "offers": [
    {
      "intent": "productivity.page.retrieve",
      "description": "페이지의 콘텐츠와 속성을 조회합니다.",
      "endpoint": "https://api.notion.com/v1/pages/{page_id}",
      "method": "GET",
      "side_effect": "read-only",
      "auth_type": "bearer",
      "confidence_score": 0.98
    },
    {
      "intent": "productivity.database.query",
      "description": "데이터베이스 내의 페이지를 필터링하고 정렬하여 조회합니다.",
      "endpoint": "https://api.notion.com/v1/databases/{database_id}/query",
      "method": "POST",
      "side_effect": "read-only",
      "auth_type": "bearer",
      "confidence_score": 0.95
    },
    {
      "intent": "productivity.page.create",
      "description": "새로운 페이지를 생성합니다.",
      "endpoint": "https://api.notion.com/v1/pages",
      "method": "POST",
      "side_effect": "state-change",
      "auth_type": "bearer",
      "confidence_score": 0.95
    }
  ],
  "needs": [
    { "intent": "identity.integration_token", "criticality": "required" }
  ]
}
